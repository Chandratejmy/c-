#include<iostream>

using namespace std;
class base
{
public:
	void display(){
		cout<<"\n Display base"<<endl;
	}
	virtual void show(){
		cout<<"\n Show base";
	}};
	class derived:public base
	{
	public:
		void display()
		{
			cout<<"\n Display derived";
		}

			void show(){
				cout<<"\n Show derived";
			}};
			int main()
			{
				base b;
				derived d;
				base *bptr;
				cout<<"\n bptr pointer to base \n";
				bptr=&b;
				bptr->display();
				bptr->show();
				cout<<"\n\n bptr points to dserived \n";
				bptr=&d;
				bptr->display();
				bptr->show();
			
				return 0;
				
			}
